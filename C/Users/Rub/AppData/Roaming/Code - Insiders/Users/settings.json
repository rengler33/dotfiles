{
    "editor.formatOnSave": true,
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter-notebook",
            "filenamePattern": "*.ipynb"
        }
    ],
    "python.insidersChannel": "daily",
    "python.languageServer": "Pylance",
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "$HOME\\.local\\bin\\black",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "$HOME\\.local\\bin\\flake8",
    "python.linting.flake8Args": [
        "--max-line-length=88",
        "--extend-ignore=E203,E501,W503",
    ],
    "python.sortImports.path": "isort",
    "python.sortImports.args": [
        "--profile=black",
    ],
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.command": "gitlens.openCommitOnRemote",
    "settingsSync.ignoredSettings": [
        "python.formatting.blackPath",
        "python.sortImports.path",
        "python.linting.flake8Path",
    ],
    "vim.highlightedyank.enable": true,
    "vim.smartRelativeLine": true,
    "vim.useSystemClipboard": true,
    "editor.lineNumbers": "relative",
    "editor.cursorSurroundingLines": 7,
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.pytestEnabled": true,
}
